.notice { text-align: center; padding: 20px; background-color: $clr_gray_xlt; }

.bar-header a { margin-left: 20px; }

.sessions .bar-header,
.passwords .bar-header { background-color: transparent; }


.form-group { max-width: 400px; margin: 40px auto;
  h2 { margin: 40px 0; }
  fieldset { margin-bottom: 20px; }
  label, input[type='text'], label, input[type='email'] { display: inline-block; width: 100%; margin-bottom: 5px; }
  input[type='checkbox'] { width: auto; }
  input[type="file"] { padding: 0; border: none; }

  select { width: 100%; }

  .cb-holder {
    label { width: auto; margin-right: 30px; }
    input[type='checkbox'] { margin: 6px 10px 0 0; height: auto; }
  }

  fieldset.image img { max-width: 100px; }

  ul { margin-bottom: 40px; }
  ul li { margin-bottom: 20px; }

  ul li h3 { margin-bottom: 20px; }
  ul li h4 { margin-bottom: 10px; }

  .actions { padding: 20px 0; border-top: 1px solid $clr_gray_xlt; }
}

td.icon {
  .holder { position: relative; display: table-cell; height: 60px; padding-left: 75px; vertical-align: middle; }
  .holder > a { position: absolute; top: 0; left: 0; }
  img { width: 100%; max-width: 24px; margin-right: 10px; }
}


.regimens.show {
  .category { padding-bottom: 0px; margin-bottom: 30px; clear: both; border-bottom: 1px solid $clr_gray_xlt; }
  .category h3 { }
  .category h3 a { color: $clr_black; }
  .subcategory { width: 100%; padding-top: 20px; margin: 0 20px 20px 0; border-top: 1px solid $clr_white_xlt;
    h4 { font-size: 11px; font-weight: 700; margin-bottom: 10px; text-transform: uppercase; }
    a { display: block; margin-bottom: 20px; }
    span { margin-right: 10px; display: inline;  }
    span img { width: 36px; }
    p { display: inline; color: $clr_black; font-size: 14px; font-weight: 500; }

  }
}

.products.show {
  .avatar { width: 100%; max-width: 420px; margin: 0 auto 20px; }
  .pinfo { width: 100%; margin-bottom: 40px;
    p strong { width: 120px; display: inline-block;}
  }
  h4 { margin-bottom: 10px; }
}


.group-contents { padding: 40px 0;
  h3 { margin-bottom: 20px; font-weight: 700; }
}

.variant-form { margin-bottom: 20px; }

form h4 { margin-bottom: 20px; }

@media (min-width: 768px) {
  .products.show {
    .avatar { width: 22%; max-width: 420px; margin: 0 3% 20px 0; float: left; }
    .pinfo { width: 75%; margin-bottom: 40px; float: left; }
    h4 { margin-bottom: 10px; }
    .skin-types img { width: 100%; max-width: 24px; margin-right: 10px;  }
  }
}
