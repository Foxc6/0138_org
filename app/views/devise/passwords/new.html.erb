<div class="row devise">	
	<div class="col-md-4 col-md-offset-4">
		<div class="bar-header">
			<h2>Forgot your password?</h2>
		</div>
		<div class="form-container">
		<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
		  <%= devise_error_messages! %>

		  <p class="message">Enter your email and we'll send you instructions on how to reset your password.</p>
		  <div class="last"><%= f.email_field :email, :autofocus => true, :placeholder => "EMAIL ADDRESS" %></div>

		  <div class="submit"><%= f.submit "Submit", :class=>'colored-btn' %></div>
		<% end %>

		<%= render "devise/shared/links" %>
		</div>
	</div>
</div>