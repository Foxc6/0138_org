<div class="hidden-form">
  <%= form_for(@size) do |f| %>
    <% if @size.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@size.errors.count, "error") %> prohibited this size from being saved:</h2>
        <ul>
        <% @size.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

     <div class="new-edit">
      <div class="form-group type">
        <div class="field">
          <%= f.label :option_type %>
          <%  %>
          <% unless @size.option_type.blank? %>
            <%= f.collection_select "option_type_id",
              @option_types, "id", "name",
              {include_blank: true, selected: @size.option_type_id},
              {class: 'chosen-select', :data => {'placeholder' => 'option Type', 'value' => @size.option_type.name}} %>
          <% else %>
            <%= f.collection_select "option_type_id",
              @option_types, "id", "name",
              {include_blank: true, selected: @size.option_type_id},
              {class: 'chosen-select', :data => {'placeholder' => 'option Type'}} %>
          <% end %>
        </div>
      </div>
      <div class="form-group note">
        <div class="field">
          <%= f.label :name %>
          <%= f.text_area :name %>
        </div>
      </div>
      <div class="form-group">
        <div class="field">
          <% %>
        </div>
      </div>
      <div class="actions">
        <%= f.submit %>
        <%= link_to 'Cancel', option_values_path %>
      </div>
    </div>
  <% end %>
</div>
