<div class="table-holder">
  <div class="has-limit extended14">
  <% if @guides.any? %>
  <table>
    <thead class="pretty">
      <tr>
        <th><%= sortable "first_name" %></th>
        <th><%= sortable "last_name" %></th>
        <th><%= sortable "username" %></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @guides.each do |guide| %>
        <tr class="override">
          <td class="avatar">
            <span class="name">
            <%= link_to guide.first_name, guide_path(guide) %>
            </span>
          </td>
          <td class="avatar">
            <span class="name">
            <%= link_to guide.last_name, guide_path(guide) %>
            </span>
          </td>
           <td>
            <%= guide.username  %>
          </td>
          <td class="actions">
            <a href="<%= edit_guide_path(guide) %>"><i class="fa fa-pencil" aria-hidden="true"></i></a>
            <a href="<%= guide_path(guide) %>"><i class="fa fa-info-circle" aria-hidden="true"></i></a>
            <%= link_to '', guide_path(guide), :method => :delete, :class => 'fa fa-times', data: { confirm: 'Are you sure?' } %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <% end %>
  </div>
</div>

<div class="col-sm-12 col-md-12 pagination-block">
  <% if @guides.any? %>
  <%= will_paginate @guides, :previous_label => 'Prev', :next_label => 'Next'  %>
  <% else %>
  <p class="empty">No guides yet.</p>
  <% end %>
</div>
