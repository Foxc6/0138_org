<% flash.each do |key, value| %>
<div id="error_explanation" class="row notice"><%= value %></div>
<% end %>
<div class="row bar-header full-bg">
  <div class="col-sm-12 col-md-12">
    <div class="has-limit">
      <h2>Product Category</h2>
      <%= link_to 'Delete', product_category_path(@product_category),
                  data: {:confirm => 'Are you sure?'}, :method => :delete %>
      <%= link_to 'Edit', edit_product_category_path(@product_category) %>
      <%= link_to 'Back', product_categories_path %>
    </div>
  </div>
</div>
<div class="group-contents">
  <% if @product_category %>
  <div class="row">
    <div class="col-sm-12 col-md-12">
      <div class="has-limit">
        <h3><%= @product_category.name %></h3>
        <p><strong>Slug:</strong> <%= @product_category.slug %></p>
        <p><strong>Position:</strong> <%= @product_category.position %></p>
        <% if @product_category.parent %>
          <p><strong>Parent:</strong> <%= @product_category.parent.name %></p>
        <% end %>
        <p><strong>Is male only?:</strong> <%= @product_category.is_male_only? %></p>
      </div>
    </div>
  </div>
  <% end %>
</div>
